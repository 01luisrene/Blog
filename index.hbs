{{!< default}}

{{!-- Header --}}
{{> "header"}}

{{!-- Portada --}}
{{> "cover"}}

{{!-- Menú --}}
{{> "menu"}}

{{!-- Busqueda --}}
{{> "search"}}

{{!-- Lenguajes para aprender --}}
<section class="code">
    <strong class="code__title">¿Qué te gustaría aprender hoy?</strong>
    
    <section class="code__languages">
        
        {{!-- HTML --}}
        <figure class="language languages__html">
            <a href="/tag/html"><img src='{{asset "images/html.png"}}' alt="html"></a>
            <figcaption>
                <a href="#">HTML</a>
            </figcaption>
        </figure>
        
        {{!-- CSS --}}
        <figure class="language languages__css">
            <a href="/tag/css"><img src='{{asset "images/css.png"}}' alt="css"></a>
            <figcaption>
                <a href="#">CSS</a>
            </figcaption>
        </figure>

        {{!-- JavaScript --}}
        <figure class="language languages__javascript">
            <a href="/tag/javascript"><img src='{{asset "images/javascript.png"}}' alt="javascript"></a>
            <figcaption>
                <a href="#">JavaScript</a>
            </figcaption>
        </figure>

    </section>
</section>

{{!-- Contenido --}}
<section id="post__content" class="post__content" role="main">
    {{> "loop"}}
</section>

{{!-- Newsletter --}}
{{> "newsletter"}}

{{!-- Paginación --}}
{{pagination}}

{{!-- Footer --}}
{{> "footer"}}

