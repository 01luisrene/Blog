{{!-- Default --}}
{{!< default }}

{{!-- Header --}}
<header class='header'>
    {{> 'header' }}
</header>

<section class='menu'>
    {{> 'menu' }}
</section>

{{#post}}
<section class='cover {{#if image}} cover-post' style='background-image: url({{image}}){{/if}}'>
    {{> 'cover-post'}}
</section>

<main class='article-wrapper' role='main'>
    <article class="article {{post_class}}">

        <section class="article__content">
            {{content}}
        </section>
        
        <section class="article__social">
            <strong class="article__text">Si te gusto el artículo, por favor, ayudame a compartir para que otras personas puedan leerlo.</strong>
            <div class="article__addthis addthis_sharing_toolbox"></div>
        </section>

    </article>
</main>

{{#author}}
<section class='article-author'>

    <div class="article-author-wrapper">
        <div class='article-author__cover {{#if image}} article-author--yes' style='background-image: url({{image}})'>
        </div>

        <figure class="article-author__options">

            <a href="{{url}}">
                <img class='article-author__img'src="{{image}}" alt='{{name}}'>
            </a>

            <figcaption class="article-author__name">
                <strong class='article-author__text'>
                    <a class='article-author__link' href="{{url}}">{{name}}</a>
                </strong>
            </figcaption>

            {{#if website}}
            <a href="{{website}}" class='article-author__button btn-default btn--radius'>Sobre mí</a>
            {{/if}}
        </figure>
        {{/if}}
    </div>
    
    <div class="article-author__info">

        {{#if location}}
        <div class="article-author__location">
            <i class="article-author__icon icon-check-in"></i>
            <span class="article-author__text">{{location}}</span>
        </div>
        {{/if}}

        <div class="article-author__about">
            {{#if bio}}
            <p class="article-author__bio">{{bio}}</p>
            {{else}}
            <p class='article-author__post'>Lee más <a class='article-author__link'href="{{url}}">artículos</a> sobre este autor.</p>
            {{/if}}
        </div>
    </div>
</section>
{{/author}}

<section class="disqus">
    {{> "disqus"}}
</section>

<section id='mc_embed_signup'>
    {{> 'subscribe' }}
</section>

<footer class="footer">
    {{> "footer"}}
</footer>

{{/post}}