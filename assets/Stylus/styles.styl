    .special__button
        text-align center
        .btn-default
            border-color $ColorBlue
            box-shadow 2px 2px 0px $ColorBlue
            margin 1rem 0

// Resolución para dispositivos de 640px
@media all and (min-width 640px)
    .special
        width 46%

// Resolución para dispositivos de 896px
@media all and (min-width 896px)
    .special
        width 40%
        
        .special__cover
            .special__image
                width 100%
                height 200px
        
