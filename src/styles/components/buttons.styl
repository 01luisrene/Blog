button[class*='btn-']
a[class*='btn-']
input[class*='btn-']
    padding 0.7rem 1.3rem
    font-weight 300
    text-transform uppercase
    
button[class*='default']
a[class*='default']
input[class*='default']
    background $color-blue
    color $color-white
    
button[class*='codepen']
a[class*='codepen']
input[class*='codepen']
    background $color-dark
    color $color-white !important
    display inline-block
    margin 0.1rem 0
    padding 0.5rem 0.8rem
    border-radius 5px
    font-size 1rem
    border 1px solid transparent !important
    
    &:before
        content "\ea39"
        font-family 'icons' !important
        margin 0 0.5rem 0 0
        speak none
        font-style normal
        font-weight normal
        font-variant normal
        text-transform none
        line-height 1
        -webkit-font-smoothing antialiased
        -moz-osx-font-smoothing grayscale
    
button[class*='--radius']
a[class*='--radius']
input[class*='--radius']
    border-radius 20px
    
@media $mq-desktop-min-1024
    button[class*='btn-']
    a[class*='btn-']
    input[class*='btn-']
        cursor pointer
        transition 0.2s
        
        &:active
            transform scale(0.9)
        
    button[class*='default']
    a[class*='default']
    input[class*='default']
        border 1px solid transparent

        &:hover
            background $color-white
            color $color-red
            border 1px solid $color-red
            letter-spacing 2px
            font-weight 400
            
    button[class*='codepen']
    a[class*='codepen']
    input[class*='codepen']
        &:hover
            background-color $color-white
            color $color-dark !important
            border 1px solid $color-dark !important
