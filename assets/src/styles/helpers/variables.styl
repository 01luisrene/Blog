// Fonts

$font-nutito = 'Nunito', sans-serif
$font-lato = 'Lato', sans-serif

// Colors

$color-black =#1B1B1B
$color-dark = #50514F
$color-red = #F25F5C
$color-yellow = #FFE066
$color-blue = #299FD3
$color-green = #70C1B3
$color-gray-C = #9998A4
