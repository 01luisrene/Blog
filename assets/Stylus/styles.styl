@import normalize
@import default

.cover
    text-align center
    background-repeat no-repeat
    background-position center
    background-size cover
    
    .logo
        margin 0 0 1rem 0
        
.info-block
    .title
        letter-spacing 5px
        font-size 2.7rem
        color #E6EBEE
        font-weight 800
        
    .description
        letter-spacing 3px
        color #E6EBEE
        margin 0 0 1.5rem 0
        display inline-block
        
.header
    background-color #1E252A
    color white
    padding 0.5rem 0.3rem
    display flex
    justify-content space-between
    
.header__title
    display flex
    justify-content flex-start
    .header__logo
        img
            width 80px
        
    .header__name
        display none
        font-size 2rem
        margin 0.2rem 0 0 0
        
.header__options
    display flex
    justify-content flex-end
    .header__search
        margin 0.3rem 0.2rem 0 0
        .header__input
            padding 0.6rem 0.5rem
            width 130px
            border-radius 3px
            border none
            color #1E252A
            
        .header__search
            font-size 1.6rem
            vertical-align -15%
            
    .header__menu
        font-size 1.8rem
        
.code
    padding 0.5rem
    text-align center
    background-color #EFEFEF
    
    &__title
        margin 1rem 0
        font-size 1.1rem
        text-transform uppercase
        display inline-block
        
    &__languages
        display flex
        justify-content space-around
        
.language
    padding 0.5rem 0.7rem
    border 4px solid white
    background-color #EFEFEF
    
    img
        width 60px
        padding 0 0 0.5rem 0
        
    figcaption
        padding 0.5rem 0 0 0
        border-top 2px solid #1E252A
        
        a
            color #1E252A
            font-weight 700
            
.post__content
    display flex
    justify-content space-around
    flex-wrap wrap
    background-color #EFEFEF
    
    .post
        box-sizing border-box
        padding 0 0 0.5rem 0
        width 100%
        margin 0.7rem 0.7rem
        background-color white
        
        .post__first
            padding 0.8rem
            text-align center
            text-transform uppercase
            letter-spacing 3px
            display none
        
        
    article:first-child
        margin 1rem 0 0 0
        background-color #1E252A
        color white
        
        .post__first
            padding 0.8rem
            text-align center
            text-transform uppercase
            letter-spacing 3px
            display block
            
        .post__cover
            border none
            
        .post__header
            border-bottom 3px solid #4299D4
            .post__title
                a
                    color #4299D4
                    
        .post__description
            display none
            
        .post__footer
            margin 0.8rem 0.5rem 0 0.5rem
            .post__author
                display block
                a
                    vertical-align top
                    margin 0.9rem 0.5rem 0 0
                    display inline-block
                    
                img
                    width 40px
                    border-radius 50%
            
        .btn-default
            border 2px solid #4299D4
        
.post__cover
    width 100%
    max-width 320px
    background-repeat no-repeat
    background-position center
    background-size cover
    height 200px
    border-top 7px solid #4299D4
    
.post__header
    padding 0 0 0.5rem 0
    border-bottom 3px solid #1E252A
    margin 0 0.5rem
    
    .post__title
        margin 0.7rem 0 0 0
        a
            color #1E252A
        
.post__description
    margin 0 0.5rem
        
.post__footer
    display flex
    justify-content space-between
    margin 0 0.5rem
    .post__author
        display none
        
.newsletter__form
    text-align center
    padding 1rem
    background-color #1E252A
    color white
    
.newsletter__content
    .newsletter__title
        font-size 1.5rem
        display block
    .newsletter__otherTitle
        font-weight 300
        
    .newsletter__inputs
        margin 0.8rem 0 0 0
        input
            color #1E252A
            
        input[type="text"]
        input[type="email"]
            width 100%
            box-sizing border-box
            padding 0.8rem 0.5rem
            margin 0.5rem 0
            border 2px solid #4299D4
            background-color #242F38
            
        input[type="submit"]
            padding 0.8rem
            border 1px solid #4299D4
            box-shadow 2px 2px 0px #4299D4
            background none
            color #4299D4
            text-transform uppercase
            background-color #242F38
            
.pagination
    text-align center
    margin 2rem 0
    .newer-posts
    .older-posts
        padding 0.7rem 0.8rem
        display inline-block
        border 2px solid #1E252A
        color #1E252A
        
.footer
    background-color #1E252A
    color white
    display flex
    justify-content space-between
    flex-wrap wrap
    text-align center
    padding 0.5rem
    
.footer__info
    width 100%
    box-sizing border-box
    .footer__logo
        img
            width 120px
            display inline-block
        figcaption
            display inline-block
            vertical-align top
            margin 1.5rem 0 0 0.5rem
            font-size 1.5rem

.footer__social
    .footer__list
        display flex
        justify-content center
        
        .footer__item
            margin 0 0.7rem
            
            a
                color white
                font-size 1.7rem
                
.footer__moreInfo
    .footer__love
        margin 1.3rem 0
        span
            margin 0 0.2rem
            font-size 1.4rem
            &:nth-child(3)
                color #EB104C
                
        img
            width 45px
            vertical-align top
            
    .footer__technologies
        .footer__ghost
        .footer__digitalOcean
            display inline-block
            margin 0.5rem
            
