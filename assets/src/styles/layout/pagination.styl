.pagination
    text-align center
    margin 0 0 1.5rem 0
    font-weight 300
    
    &__number
        margin 0 0.7rem
            
    &__newer-posts
    &__older-posts
        padding 0.2rem 0.4rem
        background $color-gray-A
        border 1px solid $color-dark
        color $color-dark
        border-radius 3px
        font-size 1.2rem
        
    &__newer-posts
        box-shadow -4px 4px 0 $color-dark
        
    &__older-posts
        box-shadow 4px 4px 0 $color-dark
        
@media $mq-tablet-min-600
    .pagination
        margin 0.5rem 0 2rem 0
        &__number
            font-size 1.1rem
            
        &__newer-posts
        &__older-posts
            padding 0.3rem 0.5rem
            font-size 1.2rem
            
@media $mq-tablet-min-750
    .pagination
        margin 1rem 0 2.5rem 0
        &__number
            font-size 1.1rem
            
        &__newer-posts
        &__older-posts
            font-size 1.5rem
            
@media $mq-desktop-min-1024
    .pagination
        margin 1.5rem 0 3rem 0
