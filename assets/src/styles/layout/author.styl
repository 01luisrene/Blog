.author-wrapper
    position relative
    overflow hidden
    padding 2rem 0 0 0
    height 230px
    
    .author__cover
        position absolute
        top 0
        margin-top -1rem
        background-repeat no-repeat
        background-size cover
        filter blur(4px)
        width 100%
        height 300px
        z-index -1
        
.author__options
    text-align center
    
    .author__img
        width 100px
        height 100px
        border-radius 50%
        
    .author__button
        display inline-block
        margin 0.5rem 0 0 0
        
.author__name
    margin 0.5rem 0
    
    .author__text
        font-size 1.4rem
        text-shadow 2px 2px 0 rgba($color-black, 0.9)
        text-transform uppercase
        font-family $font-nutito
        letter-spacing 2px
        
        .author__link
             color $color-white
             
.author__info
    padding 1.5rem 0.7rem
    text-align center
    box-sizing border-box
    background-color $color-gray-A
    
    .author__location
        color $color-dark
        font-size 1.1rem
        
        .author__icon
            vertical-align bottom
            
        .author__text
            font-family $font-nutito
            letter-spacing 1px
            text-transform uppercase
            font-weight 700
            
.author__about
    text-align left
    
    .author__bio
    .author__post
        font-weight 300
        line-height 1.5rem
        color $color-dark
        .author__link
            color $color-blue
            border-bottom 1px dashed $color-blue