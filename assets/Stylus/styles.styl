        img
            width 45px
            vertical-align top
            
    .footer__technologies
        .footer__ghost
        .footer__digitalOcean
            display inline-block
            margin 0.5rem
            
        .footer__ghost
            margin 0 0.5rem 0 0
            
// Resolución para dispositivos de 412px
@media all and (min-width 412px)
    .footer__info
        .footer__logo
            figcaption
                font-size 2rem
                
    .footer__social
        .footer__list
            .footer__item
                margin 0 0.9rem
                
                a
                    font-size 2rem

// Resolución para dispositivos de 601px
@media all and (min-width 601px)
    .footer
        text-align left
        
    .footer__info
        width 48%
        .footer__logo
            figcaption
                font-size 1.5rem
    
    .footer__social
        .footer__list
            justify-content flex-start
        
    .footer__moreInfo
        width 48%

// Resolución para Desktop
@media all and (min-width 1080px)
    .footer
        padding 0.5rem 2rem
    .footer__info
        width 30%
        
    .footer__nav
        width 30%
        display block
        li
            margin 1rem 0
        
    .footer__moreInfo
        width 30%