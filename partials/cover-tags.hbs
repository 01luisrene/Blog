{{!-- Portada para los artículos --}}

<section class="cover cover__tags{{#if tag.image}}" style="background-image: url({{tag.image}}){{else}}{{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}{{/if}}">

    {{!-- Logo --}}
    {{#if @blog.logo}}
        <figure class="logo">
            <img class="img" src="{{@blog.logo}}" alt="{{@blog.title}}" />
        </figure>
    {{/if}}

    {{!-- Tag --}}
    <div class="info-block">
        <h1 class="title">{{tag.name}}</h1>
        {{#if tag.description}}
            <strong class="description">{{tag.description}}</strong>
        {{else}}
            <strong class="description">{{pagination.total}} Artículo(s)</strong>
        {{/if}}
    </div>
    
</section>