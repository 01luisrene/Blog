{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    <section class="post__first">
        <strong class="post__first--title"><i class="fa fa-quote-left"></i> Primer Artículo <i class="fa fa-quote-right"></i></strong>
    </section>
    
    <section class="post__cover {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
    </section>

    <div class="post__info">

        <header class="post__header">
            <h2 class="post__title"><a href="{{url}}">{{{title}}}</a></h2>
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
        </header>

        <section class="post__description">
            <p>{{excerpt words="27"}}<span>...</span></p>
        </section>

        <section class="post__tags">
            {{#foreach tags}}
                <a href="{{url}}" class="tag">
                    {{name}}
                </a>
            {{/foreach}}
        </section>

        <footer class="post__footer">
            <a href="{{url}}">
                <button class="btn-default">
                    Ver más
                </button>
            </a>
            <div class="post__author">
                {{author}}
                {{#if author.image}}
                    <img src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />
                {{/if}}
            </div>
        </footer>
    </div>

</article>
{{/foreach}}

