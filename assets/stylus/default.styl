body
    font-family $FontDefault
    background #EBEBEB

figure
    margin 0
    
h1, h2, h3, h4, h5, h6
    font-family $FontTitles
    
a
    text-decoration none
    color $ColorBlue
    
strong[class*="title"]
    font-family 'Raleway', sans-serif
    font-weight 800
    
ul[class*="list"]
    list-style none
    padding 0
    margin 0
    
.icon
    background none
    border none
    
.btn-default
    padding 0.8rem 2rem
    background none
    border 1px solid $ColorDark
    box-shadow 3px 3px 0px $ColorDark
    text-transform uppercase