.cs-select
    display inline-block
    vertical-align middle
    position relative
    text-align left
    background #fff
    z-index 1000
    width 100%
    height 2.5rem
    touch-callout none
    user-select none
    margin-top -0.3125rem

    &:focus
        outline none
        
    select
        display none
        
    span
        display block
        position relative
        cursor pointer
        padding 0 1rem
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
    
    & > span
        padding-left 1.875rem
        
    & > span::after
        speak none
        position absolute
        top 50%
        transform translateY(-50%)
        font-smoothing antialiased
        osx-font-smoothing grayscale
        content '\25BE'
        left 0

    .cs-selected 
        span::after
            speak none
            position absolute
            top 50%
            transform translateY(-50%)
            font-smoothing antialiased
            osx-font-smoothing grayscale
            content '\2713'
            margin-left 1rem
            
    .cs-active
        z-index 2000
        
        & > span::after
            transform translateY(-50%) rotate(180deg)
            
        .cs-options
            visibility visible
            
    .cs-options
        position absolute
        overflow hidden
        width 100%
        background white
        visibility hidden
        
    ul
        list-style none
        margin 0
        padding 0
        width 100%
        
        span 
            padding 1rem
            
        li
            .cs-focus 
                span
                    background-color #23222d
                    
            .cs-optgroup 
                ul
                    padding-left 1rem
                    
                & > span
                    cursor default

.cs-skin-slide
    color #23222d
    font-size 1.5rem
    
    .cs-active
        border 0
    
        & > span
            text-indent -18.125rem
            opacity 0
            
        & > span::after
        font-family 'FontAwesome'
        content '\f0c9'
        color #ff4d4d
        backface-visibility hidden
        transform translate3d(0, -50%, 0)
        
        .cs-options li
            opacity 1
            
    & > span
        height 2.5rem
        line-height 2.5rem
        transition text-indent 0.3s, opacity 0.3s
        font-size 1rem
        font-weight 400
        text-transform uppercase
        
    & > span::after
        font-family 'FontAwesome'
        content '\f0c9'
        color #ff4d4d
        backface-visibility hidden
        font-size 1.625rem
        
    .cs-options
        height auto
        max-height 650%
        overflow-y auto
        top 50%
        left 50%
        bottom auto
        right auto
        padding-top 0.625rem
        padding-bottom 0.625rem
        transform translate3d(-50%, -50%, 0)
        box-shadow 0 0 0.9375rem rgba(35, 34, 45, 0.15)
        background white
        
        &::-webkit-scrollbar
            width 0.375rem
            
        &::-webkit-scrollbar-track
            background-color transparent
            background-color white
            
        &::-webkit-scrollbar-thumb
            background-color #ff4d4d
            
        li
            opacity 0
            transition opacity 1s
            
            span
                text-transform uppercase
                font-weight 400
                letter-spacing 0.125rem
                font-size 85%
                padding 0.3125rem 1.25rem
                
                &:hover
                    color #ff4d4d
                    background transparent
                    
            .cs-focus 
                span
                    color #ff4d4d
                    background transparent
                    
            .cs-selected 
                span
                    color #ff4d4d
                    background transparent
                    
    .cs-selected 
        span::after
            content ''
