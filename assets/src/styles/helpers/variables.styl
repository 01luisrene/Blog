$mq-tablet-xs = 'only screen and (min-width:' + $tablet-xs + ')'

// Tablet Small 
$tablet-sm = 640px
$mq-tablet-sm = 'only screen and (min-width:' + $tablet-sm + ')'

// Tablet Medium 
